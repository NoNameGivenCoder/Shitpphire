<div class="titleHeader">

    <img class="titleBanner" src='../../../../img/banners/<%= community.community_id %>.jpg' width="1280px">

    <div class="titleMeta">
        <img class="titleIcon" src="../../../../img/icons/<%= community.community_id %>.jpg" width="100px">
        
        <div class="titleData">
            <div class="titleName"><%= community.name %></div>
            <div class="titleDescription"><%= community.description %></div>
        </div>

        <% if (favorited) {%>
            <button id="favorite_button_<%=community.community_id%>" onclick="favorite_community(<%= community.community_id %>)" class="favorite_community" style="color: #F7A642;">s</button>
        <%} else {%>
            <button id="favorite_button_<%=community.community_id%>" onclick="favorite_community(<%= community.community_id %>)" class="favorite_community" style="color: grey">s</button>
        <%}%>
    </div>
</div>